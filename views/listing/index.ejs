<% layout("/layouts/boilerPlate.ejs") %>

    <!-- <h1>All Listing</h1> -->
    <style>
      #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
      }
      .filter{
        text-align: center;
        margin-right: 2rem;
        opacity: 0.7;
        cursor: pointer;
        border-bottom: 1px solid white;
      
      }
      .filter:hover{
        opacity: 1;
        border-bottom: 1px solid black;
      }
          .filter p{
        font-size: 0.7rem;
      }
      .tax-info{
        display: none;
      }
      .tax-toggle{
        border: 1px solid black;
        height: 2rem;
        border-radius: 1rem;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
      }
      @media (max-width:430px){
        #filters{
          display: flex;
          flex-wrap: nowrap;
          overflow-x: scroll;
          height: 10vh;
        }.tax-toggle{
          display: none;
        }
      }
      .tax-toggle-mobile{
        height: 2rem;
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: start;
        margin-bottom: 15px;
        margin-top: 3vh;
        width: 60vw;
       
      }
      .tax-toggle-mobile label{
         font-size: 13px;
         letter-spacing: 2px;
      }
      .form-check-label{
        margin-right: 10px;
      }
      img{
        height: 20vh !important;
      }
      .listing-title{
        margin-top: 10px !important;
        font-family: 'Times New Roman', Times, serif;
        letter-spacing: 2px;
        font-size: 20px;
      }
      @media(min-width:500px){
        .tax-toggle-mobile{
          display: none;
        }
      }
    </style>
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Citys</p>
      </div>
       <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-chess-rook"></i></div>
        <p>Catles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>

      <div class="tax-toggle ms-auto">
        <div class="form-check-reverse form-switch">
        <input class="form-check-input switchCheckDefault" type="checkbox" role="switch" >
        <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
        </div>  
      </div>

    </div>
    <div class="row">
       <div class="tax-toggle-mobile col">
        <div class="form-check-reverse form-switch">
        <input class="form-check-input switchCheckDefault" type="checkbox" role="switch" >
        <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
        </div>  
      </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" >
            <!-- Cards -->
     <% for(listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card" >
  <img src="<%= listing.image.url %>" class="card-img-top card-img" alt="..." style="height: 20rem;">
  <div class="card-body">
    <p class="card-text listing-title"><b><%= listing.title %></b></p>
     <p class="card-text"> &#8377; <%= listing.price.toLocaleString("en-IN") %> / night &nbsp; &nbsp; <i class="tax-info">+18% GST</i></p>
  </div>
  </div>
  </a>
  <% } %>
</div>

<script>
  let taxSwitch =document.getElementsByClassName("switchCheckDefault");
  for(let btn of taxSwitch){
        btn.addEventListener("click",()=>{
        let tax_info = document.getElementsByClassName("tax-info");
    for(info of tax_info){
      if(info.style.display != "inline"){
        info.style.display="inline";
      }else{
        info.style.display="none";
      }
    }
  });
  }
</script>