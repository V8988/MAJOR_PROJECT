<% layout("/layouts/boilerPlate.ejs") %>
<style>
    @media (max-width:430px){
        .row{
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .col-8{
            width: 90% !important;
        }
        .offset-2{
            margin-left: 0px;
        }
        label{
            font-weight: 700;
        }
        .btn-box{
            display: flex;
            align-items: center;
            justify-content: center;
        }.edit-btn{
            width: 50%;
            height: 5vh;
        }
        #main-title{
            text-decoration: underline;
        }
    }
</style>
    <div class="row">
        <div class="col-8 offset-2">
    <h3 id="main-title">Edit Listing From</h3>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="mt-3 needs-validation" enctype="multipart/form-data" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Edit Title</label>
            <input type="text" name="title" value="<%= listing.title %>" class="form-control" required>
            <div class="valid-feedback">Title is okay</div>
            <div class="invalid-feedback">Title should be valid</div>
        </div>
        <div class="mb-3">
            <label for="myTextarea" class="form-label">Edit Description</label>
            <textarea name="description" id="myTextarea" class="form-control" required><%= listing.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Edit Image</label>
            <input type="file" name="image" value="<%= listing.image.url %>" class="form-control" id="image" >
        </div>
        <div class="row">
              <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Edit Price</label>
            <input type="number" name="price" value="<%= listing.price %>" class="form-control" id="price" required>
            </div>
            <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Edit Country</label>
            <input type="text" name="country" value="<%= listing.country %>" class="form-control" required>
             </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Edit Location</label>
            <input type="text" name="location" value="<%= listing.location %>" class="form-control" id="location" required>
        </div>
        <div class="mb-3 btn-box">
            <button class="btn btn-outline-dark edit-btn">Edit Listing</button>
        </div>
    </form>
    </div>
    </div>
